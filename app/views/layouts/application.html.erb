<!DOCTYPE html>
<html>
<head>
  <title>Adresar</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="central_widget">
    <div class="background">

    <div class="sidebar">

      <div class="language">
        <% I18n.available_locales.each do |l| %>
          <%= '[' if l==I18n.locale %><a href="?locale=<%= l %>"><%= l %></a><%= ']' if l==I18n.locale %>
        <% end %>
      </div>

      <ul>
        <li><%= link_to t(:home_page), '/' %></li>
        <li><%= link_to t(:address_book), firms_path %></li>
      </ul>
      <%= render :partial => 'tags/cloud', :locals => {:tags => Tag.all} %>
    </div>

    <div class="content">
      <%= yield %>
    </div>

    </div>
  </div>

</body>
</html>
