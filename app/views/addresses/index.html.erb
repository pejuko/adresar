<h1>Listing addresses</h1>

<table>
  <tr>
    <th><%= t(:city) %></th>
    <th><%= t(:street) %></th>
    <th><%= t(:psc) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.city %></td>
    <td><%= address.street %></td>
    <td><%= address.psc %></td>
    <td><%= link_to t(:show), address %></td>
    <td><%= link_to t(:edit), edit_address_path(address) %></td>
    <td><%= link_to t(:destroy), address, confirm: t(:confirm), method: :delete %></td>
  </tr>
<% end %>
</table>

